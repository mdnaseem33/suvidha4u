<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />

        <LinearLayout
            android:id="@+id/form_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:background="@drawable/home_bg"
            android:backgroundTint="@color/grey"
            android:orientation="vertical"
            android:paddingStart="@dimen/_15sdp"
            android:paddingTop="@dimen/_15sdp"
            android:paddingEnd="@dimen/_15sdp"
            android:paddingBottom="@dimen/_15sdp">

            <!--        <TextView-->
            <!--            android:layout_width="wrap_content"-->
            <!--            android:layout_height="wrap_content"-->
            <!--            android:fontFamily="@font/roboto_bold"-->
            <!--            android:text="Retailer ID"-->
            <!--            android:textColor="@color/blue" />-->

            <!--        <EditText-->
            <!--            android:layout_width="match_parent"-->
            <!--            android:layout_height="@dimen/_30sdp"-->
            <!--            android:layout_marginTop="@dimen/_5sdp"-->
            <!--            android:background="@drawable/create_edittext_bg"-->
            <!--            android:fontFamily="@font/roboto_bold"-->
            <!--            android:textColor="@color/blue" />-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:text="Retailer Name"
                android:textColor="@color/blue" />

            <EditText
                android:id="@+id/retailer_name_et"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/create_edittext_bg"
                android:fontFamily="@font/roboto_medium"
                android:imeOptions="actionNext"
                android:singleLine="true"
                android:paddingStart="@dimen/_10sdp"
                android:paddingEnd="@dimen/_5sdp"
                android:textColor="@color/blue"
                android:textSize="@dimen/_10sdp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/roboto_bold"
                android:text="Owner Name"
                android:textColor="@color/blue" />

            <EditText
                android:id="@+id/retailer_ownername_et"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/create_edittext_bg"
                android:fontFamily="@font/roboto_medium"
                android:imeOptions="actionNext"
                android:singleLine="true"
                android:paddingStart="@dimen/_10sdp"
                android:paddingEnd="@dimen/_5sdp"
                android:textColor="@color/blue"
                android:textSize="@dimen/_10sdp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/roboto_bold"
                android:text="Phone No."
                android:textColor="@color/blue" />

            <EditText
                android:id="@+id/retailer_phone_et"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/create_edittext_bg"
                android:fontFamily="@font/roboto_medium"
                android:imeOptions="actionNext"
                android:paddingStart="@dimen/_10sdp"
                android:singleLine="true"
                android:paddingEnd="@dimen/_5sdp"
                android:textColor="@color/blue"
                android:textSize="@dimen/_10sdp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/roboto_bold"
                android:text="Email ID"
                android:textColor="@color/blue" />

            <EditText
                android:id="@+id/retailer_email_et"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/create_edittext_bg"
                android:fontFamily="@font/roboto_medium"
                android:imeOptions="actionNext"
                android:singleLine="true"
                android:paddingStart="@dimen/_10sdp"
                android:paddingEnd="@dimen/_5sdp"
                android:textColor="@color/blue"
                android:textSize="@dimen/_10sdp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/roboto_bold"
                android:text="Membership Plan Name"
                android:textColor="@color/blue" />

            <EditText
                android:id="@+id/retailer_member"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/create_edittext_bg"
                android:fontFamily="@font/roboto_medium"
                android:singleLine="true"
                android:text="Plus Member"
                android:paddingStart="@dimen/_10sdp"
                android:paddingEnd="@dimen/_5sdp"
                android:textColor="@color/blue"
                android:textSize="@dimen/_10sdp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/roboto_bold"
                android:text="Full Address"
                android:textColor="@color/blue" />

            <EditText
                android:id="@+id/retailer_address_et"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/create_edittext_bg"
                android:fontFamily="@font/roboto_medium"
                android:imeOptions="actionNext"
                android:paddingStart="@dimen/_10sdp"
                android:singleLine="true"
                android:paddingEnd="@dimen/_5sdp"
                android:textColor="@color/blue"
                android:textSize="@dimen/_10sdp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/roboto_bold"
                android:text="State"
                android:textColor="@color/blue" />

            <EditText
                android:id="@+id/retailer_state_et"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/create_edittext_bg"
                android:fontFamily="@font/roboto_medium"
                android:imeOptions="actionNext"
                android:paddingStart="@dimen/_10sdp"
                android:singleLine="true"
                android:paddingEnd="@dimen/_5sdp"
                android:textColor="@color/blue"
                android:textSize="@dimen/_10sdp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/roboto_bold"
                android:text="GST"
                android:textColor="@color/blue" />

            <EditText
                android:id="@+id/retailer_gst_et"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/create_edittext_bg"
                android:fontFamily="@font/roboto_medium"
                android:imeOptions="actionDone"
                android:singleLine="true"
                android:paddingStart="@dimen/_10sdp"
                android:paddingEnd="@dimen/_5sdp"
                android:textColor="@color/blue"
                android:textSize="@dimen/_10sdp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/roboto_bold"
                android:text="Password"
                android:textColor="@color/blue" />

            <EditText
                android:id="@+id/retailer_password"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/create_edittext_bg"
                android:fontFamily="@font/roboto_medium"
                android:imeOptions="actionDone"
                android:singleLine="true"
                android:inputType="textWebPassword"
                android:paddingStart="@dimen/_10sdp"
                android:paddingEnd="@dimen/_5sdp"
                android:textColor="@color/blue"
                android:textSize="@dimen/_10sdp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/cancel_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/red"
                android:fontFamily="@font/roboto_regular"
                android:text="Cancel"
                android:textAllCaps="false"
                app:cornerRadius="@dimen/_8sdp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/save_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:backgroundTint="@color/blue"
                android:fontFamily="@font/roboto_regular"
                android:text="Save"
                android:textAllCaps="false"
                app:cornerRadius="@dimen/_8sdp" />

        </LinearLayout>

    </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <ProgressBar
        android:id="@+id/pb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:indeterminateTint="@color/blue"
        android:visibility="gone" />



</RelativeLayout>
